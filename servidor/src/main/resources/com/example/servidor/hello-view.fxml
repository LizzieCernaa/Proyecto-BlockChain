        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <Label fx:id="welcomeText"/>
    <Button text="Hello!" onAction="#onHelloButtonClick"/>
    <Label text="Server Node Location"/>
    <Label text="IP:"/>
    <Label text="PORT:"/>
    <Label text="BlockChain Action and Messages:"/>
    <Button fx:id="btnsummary">Summary</Button>  <Button fx:id="btnbalances">Balances</Button>
    <TextArea>  </TextArea>
</VBox>
